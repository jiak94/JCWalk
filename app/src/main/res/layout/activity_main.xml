<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#000000"
    android:clickable="true"
    android:id="@+id/info">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:id="@+id/intro"
        android:textColor="#ffffff"
        android:background="#0b457e"
        android:paddingLeft="30dp"
        android:paddingTop="5dp"
        android:paddingRight="30dp"
        android:paddingBottom="5dp"
        android:typeface="normal"
        android:layout_marginBottom="171dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_above="@+id/intro"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:src="@drawable/logo"
        android:adjustViewBounds="true"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/icon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info"
        android:id="@+id/moreInfo"
        android:layout_marginTop="64dp"
        android:background="#262626"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/intro"
        android:layout_alignLeft="@+id/intro"
        android:layout_alignStart="@+id/intro"
        android:layout_alignRight="@+id/intro"
        android:layout_alignEnd="@+id/intro" />

</RelativeLayout>
