    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_xxhdpi"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar" >
        <activity
            android:name="com.erganellc.www.jcmemorialwalkapp.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.erganellc.www.jcmemorialwalkapp.PlayerActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.erganellc.www.jcmemorialwalkapp.BlockActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>